<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/header_background"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/nav_user_image"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_image"/>

    <TextView
        android:id="@+id/nav_user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myborder"
        android:fontFamily="@font/nova_round"
        android:text="Full Name"
        android:textColor="#3C3F41"
        android:textSize="18sp"
       />
    <TextView
        android:id="@+id/nav_user_email"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@gmail.com"
        android:textColor="#020A37"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L: "
        android:background="@drawable/myborder"
        android:textColor="#020A37"
        android:textSize="18sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/nav_user_lefteye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:background="@drawable/myborder"
        android:textColor="#020A37"
        android:textSize="18sp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R: "
        android:background="@drawable/myborder"
        android:textColor="#020A37"
        android:textSize="18sp"
        />
        <TextView
            android:id="@+id/nav_user_righteye"
            android:layout_width="wrap_content"
            android:background="@drawable/myborder"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#020A37"
            android:textSize="18sp"
          />
    </LinearLayout>
    <TextView
        android:id="@+id/nav_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textAllCaps="true"
        android:background="@drawable/myborder"
        android:textColor="#020A37"
        android:textSize="18sp"
        />




</LinearLayout>